<Window x:Class="WarehouseManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <Button Content="Manage Products" Width="150" Margin="10" Click="OpenManageProducts"/>
            <Button Content="Manage Orders" Width="150" Margin="10" Click="OpenManageOrders"/>
            <Button Content="Manage Suppliers" Width="150" Margin="10" Click="OpenManageSuppliers"/>
        </StackPanel>
    </Grid>
</Window>
